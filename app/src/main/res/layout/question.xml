<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#7106c3"
    android:padding="100px"
    android:paddingLeft="100px"
    android:paddingTop="100px"
    android:paddingRight="100px"
    android:id="@+id/question">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#f7f7f7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="#fb6161"
            android:padding="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/word1_display"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical|center_horizontal" />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/option1_diplay"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/option2_display"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/option3_display"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/option4_display"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/not_sure_display"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>